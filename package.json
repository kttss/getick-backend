{
  "name": "getick-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "fix": "npm run lint:config && npm run format && npm run lint:fix",
    "validate": "npm run lint:config && npm run format:check && npm run lint",
    "validate:quick": "npm run lint:config && lint-staged",
    "format:check": "prettier --check --loglevel warn \"src/**/*.{ts,json,js}\" \"test/**/*.{ts,json,js}\"",
    "lint:config": "tslint-config-prettier-check ./tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/mongoose": "7.2.4",
    "@nestjs/platform-express": "^7.6.13",
    "@nestjs/swagger": "4.8.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "fastify-swagger": "4.7.0",
    "mongoose": "5.11.19",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate:quick",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-checkout": "./scripts/post-checkout.sh $HUSKY_GIT_PARAMS",
      "post-merge": "npm ci"
    }
  },
  "lint-staged": {
    "./**/*.{js,ts}": [
      "tslint -p tsconfig.json -c tslint.json --fix",
      "git add",
      "prettier --write",
      "git add"
    ],
    "./**/*.{css,scss}": [
      "prettier --write",
      "git add"
    ],
    "./**/*.{json,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
